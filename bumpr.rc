[bumpr]
file = src/pycmdtools/__init__.py
vcs = git
publish = python setup.py sdist register upload
clean =
	python setup.py clean
	rm -rf *egg-info build dist
files =
	setup.py
	README.rst

[bump]
unsuffix = true
message = version {version}

[changelog]
file = CHANGELOG.rst
bump = {version} ({date:%Y-%m-%d})
prepare = In development

[commands]
bump = git push --tags
